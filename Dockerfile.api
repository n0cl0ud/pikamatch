FROM nvidia/cuda:12.1.1-runtime-ubuntu22.04

ENV DEBIAN_FRONTEND=noninteractive
ENV PYTHONUNBUFFERED=1

RUN apt-get update && apt-get install -y --no-install-recommends \
    python3.11 \
    python3.11-venv \
    python3-pip \
    git \
    curl \
    gosu \
    && rm -rf /var/lib/apt/lists/*

RUN update-alternatives --install /usr/bin/python3 python3 /usr/bin/python3.11 1 \
    && update-alternatives --install /usr/bin/python python /usr/bin/python3.11 1

WORKDIR /app

RUN pip install --no-cache-dir --upgrade pip setuptools

RUN pip install --no-cache-dir \
    torch \
    torchvision \
    --index-url https://download.pytorch.org/whl/cu128

RUN pip install --no-cache-dir \
    fastapi==0.115.6 \
    "uvicorn[standard]==0.34.0" \
    python-multipart==0.0.18 \
    Pillow>=10.0 \
    "numpy>=1.24" \
    "PyMuPDF>=1.24.0" \
    "imagehash>=4.3.0" \
    "httpx>=0.27.0" \
    "opencv-python-headless>=4.8.0" \
    "ftfy" \
    "regex" \
    "qdrant-client>=1.7.0"

RUN pip install --no-cache-dir --no-build-isolation \
    git+https://github.com/openai/CLIP.git

# Create non-root user
RUN groupadd -r appuser && useradd -r -g appuser -d /home/appuser -s /sbin/nologin appuser

# Create directories with correct ownership
RUN mkdir -p /app/indexed_pdfs && chown -R appuser:appuser /app
RUN mkdir -p /home/appuser/.cache/huggingface && chown -R appuser:appuser /home/appuser

COPY --chown=appuser:appuser api.py .
COPY entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

EXPOSE 8002

# Entrypoint fixes volume permissions then drops to appuser via gosu
ENTRYPOINT ["/entrypoint.sh"]
CMD ["uvicorn", "api:app", "--host", "0.0.0.0", "--port", "8002"]
